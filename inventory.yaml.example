all:
  vars:
      ansible_user: root
      data_drive_fs: ext4
      docker_data_mountpoint: /var/lib/docker
      swarm_port: 2377

nodes:
  children:
    masters:
      hosts:
        example-master:
          ansible_host: your.ip.here
          hostname: example-master
          data_drive: /dev/your-drive
    workers:
      hosts:
        example-worker:
          ansible_host: your.ip.here
          hostname: example-worker
          data_drive: /dev/your-drive
